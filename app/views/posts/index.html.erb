<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>日時</th>
      <th>イベント名</th>
      <th>自由記入欄</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.date %></td>
        <td><%= post.eventName %></td>
        <td><%= post.freeSpace %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
